@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Authorization", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">

            @if (User.IsInRole("Admin"))
            {
                <li>
                    @Html.ActionLink("Categories", "Index", "Category")
                </li>
                <li>
                    @Html.ActionLink("Admin functions", "Index", "Test")
                </li>
            }
            <li>
                @Html.ActionLink("User functions", "Index", "Client")
            </li>
            <li>
                @Html.ActionLink("Statistic", "ViewStatistic", "Client")
            </li>
            <li>
                @Html.ActionLink("Hello, " + User.Identity.Name + "!", "UpdateClientProfile", "Client", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Authentication", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Authentication", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}

