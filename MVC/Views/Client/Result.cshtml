@using MVC.Models.Client
@model ResultViewModel

@{
    ViewBag.Title = "";
}

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

            <h3>
                @Html.LabelFor(m => Model.CountOfRightAnswers) :            
                    @Html.DisplayFor(m => Model.CountOfRightAnswers, new { @class = "form-control" })          
            </h3>
          
      <h3>
                @Html.LabelFor(m => Model.TimeToPass) :                
                    @Html.DisplayFor(m => Model.TimeToPass, new { @class = "form-control" })                
            </h3>

            @if (Model.WrongResults != null)
            {<h3>
                 @Html.Label("Wrong answers : ")


        @for (int i = 0; i < Model.WrongResults.Count; i++)
        {
            @Html.DisplayFor(x=>Model.WrongResults[i])
            
            if (i != Model.WrongResults.Count - 1)
            {
                @Html.Label(",")
            }
        }
    </h3>
            }      

<div>
    @Html.ActionLink("Back to test's list", "Index")
</div>


