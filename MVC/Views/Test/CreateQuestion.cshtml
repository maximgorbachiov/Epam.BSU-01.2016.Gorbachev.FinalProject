@using MVC.Models.Shared
@model QuestionViewModel

@{
    ViewBag.Title = "Create question";
}

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm("CreateQuestion", "Test", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(x => Model.TestId)

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.QuestionText, new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.QuestionText, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.QuestionText, "", new { @class = "text-danger" })
            </div>
        </div>

        @for (int i = 0; i < 4; i++)
        {
            <div class="form-group">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.Answers[i], new { @class = "control-label" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Answers[i], new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(m => m.RightAnswer, new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.EditorFor(m => m.RightAnswer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.RightAnswer, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label class="control-label">Image file</label>
            </div>
            <div class="col-md-10">
                <input type="file" name="uploadImage" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

