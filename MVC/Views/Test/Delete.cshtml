@model MVC.Models.Shared.TestViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Test delete</h2>
<h5>@Html.ActionLink("Back to test's list", "Index")</h5>
<hr />

<div></div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group lead">
        Are you sure you want to delete test with name <b>@Html.DisplayFor(model => model.TestName)</b>?
    </div>

    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-primary" />
    </div>
}
